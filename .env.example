NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# Stripe Configuration
# ============================================
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# Sentry Configuration
# ============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org-name
SENTRY_PROJECT=your-project-name

# ============================================
# Email Configuration (Resend)
# ============================================
RESEND_API_KEY=re_...
# Use noreply@ instead of personal email for transactional emails
# Change to mail.handicappin.com if using dedicated subdomain
RESEND_FROM_EMAIL="Handicappin' <sebastiansole@handicappin.com>"

# ============================================
# Cron Jobs Configuration
# ============================================
STRIPE_CRON_SECRET=your-stripe-cron-secret
HANDICAP_CRON_SECRET=your-handicap-cron-secret

# Optional: Handicap queue processing configuration
# HANDICAP_QUEUE_BATCH_SIZE=25
# HANDICAP_MAX_RETRIES=3

# ============================================
# Application Configuration
# ============================================
# Site URL for local development (server-side only)
# In Vercel deployments, VERCEL_URL is used automatically
SITE_URL=http://localhost:3000
NODE_ENV=development
